extends ../layouts/staffMenu
block content

    h1 List Trainer with Course
    a.btn(href = '/staff/addTrainerToCourse') Add new Trainer to Course
    table.table 
        tr 
            th Course
            th Trainer Name
            th 
        each view in viewTrainers
            tr
                td= view.courseName
                td= view.trainer
                td 
                    a.btn.btn(href='/staff/deleteTrainer/'+ view.id) Delete 
    